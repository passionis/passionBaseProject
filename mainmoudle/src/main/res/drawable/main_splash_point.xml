<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape android:shape="oval">
            <size android:width="@dimen/baselib_dp_8"
                android:height="@dimen/baselib_dp_8" />

            <solid android:color="@color/baselib_white" />

            <stroke android:color="@color/baselib_white" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="oval">
            <size android:width="@dimen/baselib_dp_8"
                android:height="@dimen/baselib_dp_8" />

            <solid android:color="@color/baselib_lightgray" />

            <stroke android:color="@color/baselib_lightgray" />
        </shape>
    </item>
</selector>